<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
  <mapper namespace="com.home.middle.board.notice.NoticeDAO">
  
  <sql id="noticeCondition">
  		<where>
  			<if test="kind=='contents'">
  				CONTENTS LIKE '%'||#{search}||'%'
  			</if>
  			<if test="kind=='id'">
  				ID LIKE '%'||#{search}||'%'
  			</if>
  			<if test="kind == 'title'">
  				TITLE LIKE '%' || #{search} || '%'
  			</if>
  		</where>
  	</sql>
  	
  	<select id="getTotalCount" resultType="Long">
  		SELECT COUNT(NUM) FROM NOTICE
  	</select>
  	
  	<select id="getBoardList" resultType="NoticeDTO" parameterType="Pager">
  		SELECT * FROM
	  	(
		  	SELECT ROWNUM R, N.* FROM
		  		(
			  		SELECT NUM, ID ,TITLE,CONTENTS, REGDATE, HIT FROM NOTICE
			  		<include refid="noticeCondition"></include>
			  		ORDER BY DEPTH DESC
		  		) N
	  	 )
	  	WHERE R BETWEEN #{startRow} AND  #{lastRow}	  
  	</select>
  	
  	<insert id="setBoardAdd" parameterType="NoticeDTO">
  		INSERT INTO NOTICE
  		VALUES(NOTICE_SEQ.NEXTVAL,#{id}, #{title}, #{contents}, sysdate,0,0,)
  	</insert>
  </mapper>